<?xml version='1.0' encoding='utf-8'?>
<widget id="org.smartsound.smartsound" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmartSound</name>
    <description>
        SmartSound bundle client app.
    </description>
    <author email="shiv.v.trivedi@gmail.com" href="http://shiv.v.trivedi.com/">
        Cameron Potter, Manavi Rao, &amp; Shiv Trivedi
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <universal-links>
        <host name="smartsound.web.app" scheme="https" />
        <host name="http://smartsound-fb58c.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="AndroidLaunchMode" value="singleTask" />
</widget>
